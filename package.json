{
    "name": "tdd_todo",
    "private": true,
    "scripts": {
        "start": "meteor run --settings server/settings.json"
    },
    "dependencies": {
        "@babel/runtime": "^7.0.0-beta.44",
        "babel-eslint": "^8.1.1",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "babel-runtime": "^6.26.0",
        "eslint-config-airbnb": "^15.1.0",
        "eslint-config-prettier": "^2.4.0",
        "eslint-plugin-jsx-a11y": "^6.0.2",
        "eslint-plugin-meteor": "^4.1.4",
        "eslint-plugin-prettier": "^2.2.0",
        "eslint-plugin-react": "^7.3.0",
        "eslint-plugin-standard": "^3.0.1",
        "fibers": "^2.0.2",
        "lodash": "^4.17.5",
        "lodash.foreach": "^4.5.0",
        "lodash.isempty": "^4.4.0",
        "lodash.isundefined": "^3.0.1",
        "lodash.sortby": "^4.7.0",
        "material-ui": "^1.0.0-beta.40",
        "material-ui-bottom-sheet": "^0.5.1",
        "material-ui-icons": "^1.0.0-beta.36",
        "material-ui-password-field": "^2.0.0-0",
        "material-ui-search-bar": "^1.0.0-beta.4",
        "meteor-node-stubs": "~0.2.11",
        "mobx": "^3.2.2",
        "mobx-react": "^4.2.2",
        "moment": "^2.19.0",
        "prettier": "^1.6.1",
        "react": "^15.6.1",
        "react-addons-css-transition-group": "^15.6.0",
        "react-addons-pure-render-mixin": "^15.6.0",
        "react-custom-scrollbars": "^4.2.1",
        "react-dom": "^15.6.1",
        "react-infinite": "^0.13.0",
        "react-layout-components": "^3.0.6",
        "react-tap-event-plugin": "^2.0.1",
        "react-window-mixins": "0.0.7",
        "request": "^2.85.0"
    },
    "eslintConfig": {
        "plugins": [
            "meteor",
            "standard",
            "react",
            "prettier"
        ],
        "extends": [
            "airbnb",
            "plugin:meteor/recommended",
            "eslint:recommended",
            "plugin:react/recommended",
            "prettier"
        ],
        "env": {
            "es6": true,
            "browser": true,
            "node": true,
            "meteor": true,
            "mongo": true,
            "jasmine": true
        },
        "parser": "babel-eslint",
        "parserOptions": {
            "ecmaFeatures": {
                "modules": true
            }
        },
        "settings": {
            "import/resolver": "meteor"
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "tabWidth": 4,
                    "jsxBracketSameLine": true,
                    "semi": false,
                    "printWidth": 200
                }
            ],
            "import/no-extraneous-dependencies": 0,
            "import/extensions": 0,
            "import/no-unresolved": 0,
            "import/prefer-default-export": 0,
            "no-fallthrough": 0,
            "experimental-decorators": 0,
            "react/jsx-indent": 0,
            "react/jsx-indent-props": 0,
            "jsx-a11y/href-no-hash": 0,
            "react/jsx-filename-extension": [
                1,
                {
                    "extensions": [
                        ".js",
                        ".jsx"
                    ]
                }
            ]
        }
    },
    "devDependencies": {
        "eslint": "^4.19.1",
        "eslint-import-resolver-meteor": "^0.4.0",
        "eslint-plugin-import": "^2.10.0"
    }
}
